<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </ul>

      <ul class="navbar-nav ml-auto">
        <% if(username){ %>
          <form class="d-flex" method="POST" action="/logout">
            <span  class="navbar-text " style="margin-right: 2em;color: black;">
              Logged in As <%=username%>!
            </span>            
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </form>
        <% } else{ %> 
         <form class="d-flex" method="POST" action="/login">               
           <input class="form-control " type="text" name="username" placeholder="Username" style="width: 250px;margin-right: 2em;">
           <button type="submit" class="btn btn-outline-dark">Submit</button>
         </form>
        <% } %>
      </ul>
    </div>
  </nav>
  
</header>